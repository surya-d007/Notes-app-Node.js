<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes</title>
    <link rel="stylesheet" href="bootstrap.min.css">
    <style>
        body{
            background: rgb(238,174,202);
background: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,233,228,0.31858864151129207) 100%);
        }
        .notes-card{
            max-width: 900px;
            min-width: 500px;
        }
        .crd-title{
            background-color: #e4ccdf;
        }
        .new-txt{
            width: 100%;
            height: 100%;

        }
    </style>
</head>
<body class="p-5">
    <h2>Your Notes</h2> 

    <div>
    <% for (const [index, note] of notes.entries()) { %>
        <div class="card notes-card m-5 shadow-lg rounded-4 border-3 border-opacity-50">
            <div class="card-body p-0">
              <h5 class="card-title crd-title p-2 rounded-top-4">Note <%= index + 1 %></h5>
              <p class="card-text p-2"><%= note.content %></p>
            </div>
        </div>
    <% } %>
    </div>



    
    <form action="/notes-home" method="post">
        <div class="card notes-card m-5 shadow-lg border-0 rounded-4">
            <div class="card-body p-0">
              <h5 class="card-title crd-title p-2 rounded-top-4">Note title</h5>
              <textarea name="content" class="card-text p-2 border-0 p-2 new-txt"  placeholder="Add a new note"></textarea>
              <input type="hidden" name="email" value="<%= email %>">
            </div>
            <button type="submit" class="m-2 btn btn-light">Save</button>
        </div>
        
    </form>
</body>
</html>
